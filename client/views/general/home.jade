      section#section2.pane.productdetails
        .wrapper
          include ./sections/section2
      .img-holder(data-image='../../images/user/product-images/golden-gate-background.jpg', data-image-mobile='../../images/user/product-images/golden-gate-background.jpg', data-width='1024', data-height='679')
      section#section3.pane.howitworks_reviews
