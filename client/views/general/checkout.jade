               .select
                 select#country
                   option(value='1') United States
                   option(value='2') United Kingdom
                   option(value='3') Uganda
                   option(value='4') Etc.
               label.country(for='country') Country
         a.continue(href='#') Continue
     .column.column3
       #step3.step
         .number
           span 3
         .title
           h1 REVIEW
         .modify
           i.fa.fa-plus-circle
       #final_products.content
         #ordered.left
           .products
             .product_image
               img(src='/../images/McMacular-sideview.jpg', style='width:65%')
             .product_details
               span.product_name McMacular Silk lined denim
               span.quantity 1
               span.price $45.00
           .totals
             span.subtitle
               | Subtotal 
               span#sub_price $45.00
             span.subtitle
               | Tax 
               span#sub_tax $2.00
             span.subtitle
               | Shipping 
               span#sub_ship $4.00
           .final
             span.title
               | Total 
               span#calculated_total $51.00
         #reviewed.right
           #complete
             a#complete.big_button(href='#') CHECKOUT
             span.sub
               | By selecting this button you agree to the purchase and subsequent payment for this order.
