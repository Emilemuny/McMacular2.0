  .container-fluid
    // Brand and toggle get grouped for better mobile display
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      //- a.navbar-brand(href='#') Brand
      a(ui-sref='home'): img.navbar-brand(src='../../images/McMacular_Logo.jpg', style='width: 30% height: 30%')
    // Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      ul.nav.navbar-nav
        li
          a(href='#section2', du-smooth-scroll='', du-scrollspy='', duration='2000') WHAT IT'S ALL ABOUT
        li
          a(href='#section3', du-smooth-scroll='', du-scrollspy='', duration='2000') HOW IT WORKS
        li.reservebutton
          a(href='#section4', du-smooth-scroll='', du-scrollspy='', duration='2000') Reserve now
        li.dropdown
          a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
            | More 
            span.caret
          ul.dropdown-menu(role='menu')
            li
              a(href='#') Reviews
            li
              a(href='#') About us
            li
              a(href='#section5', du-smooth-scroll='', du-scrollspy='', duration='2000') Contact us
      ul.nav.navbar-nav.navbar-right(ng-hide='user')
        li
          a(ui-sref='register') Register
        li
          a(ui-sref='login') Login
      ul.nav.navbar-nav.navbar-right(ng-show='user')      
        li.dropdown
          a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
            | {{user.email || user.displayName}} 
            span.caret
          ul.dropdown-menu(role='menu')
            li
              a(href='#') Go to your cart
            li
              a(href='#', ng-click='logout()') Logout

    
  
      
          
